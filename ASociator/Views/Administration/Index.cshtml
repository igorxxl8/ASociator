
@model ASociator.ViewModels.UsersListViewModel;
@{
    ViewData["Title"] = "Index";
}

<h2>Asociator Administration</h2>


@await Html.PartialAsync("SearchUserFilterPartial", Model)

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>

                <td>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Info</a>

                    @if (item.Email != ViewData["admin_email"].ToString())
                    {
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">X</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<p class="bottom">
    <a asp-action="Messages" class="btn btn-primary">Messages</a>
</p>
