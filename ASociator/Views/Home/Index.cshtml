@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/img/ban1.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Sign up and stay in touch with your friends
                    <a class="btn btn-default" asp-area="" asp-controller="Account" asp-action="Register">
                        Register
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/img/ban2.svg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Setting up personal information
                    <a class="btn btn-default">
                        Edit profile
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/img/ban3.svg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    User friends
                    <a class="btn btn-default">
                        Friends
                    </a>
                </p>
            </div>
        </div>

        <div class="item">
            <img src="~/img/ban4.svg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Messaging with other users
                    <a class="btn btn-default">
                        Messages
                    </a>
                </p>
            </div>
        </div>

        <div class="item">
            <img src="~/img/ban5.svg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Search for users by certain criteria
                    <a class="btn btn-default">
                        Search user
                    </a>
                </p>
            </div>
        </div>

        <div class="item">
            <img src="~/img/ban6.svg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Search by messages
                    <a class="btn btn-default">
                        Search message
                    </a>
                </p>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
