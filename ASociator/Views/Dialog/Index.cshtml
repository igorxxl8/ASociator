@model List<Dialog>
@{

    ViewData["Title"] = ViewData["Dialogs"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Dialogs"]:</h1>

<table class="table">
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>Addressee: @Model[i].Addressee.FirstName</td>
            <td>Initiator: @Model[i].Initiator.FirstName</td>
            <td>
                <a class="btn btn-info" asp-controller="Dialog" asp-action="Dialog" asp-route-id="@Model[i].ID">
                    @ViewData["View"]
                </a>

                <a class="btn btn-danger" asp-controller="Dialog" asp-action="RemoveDialog" asp-route-id="@Model[i].ID">
                    @ViewData["Remove"]
                </a>
            </td>
        </tr>
    }
</table>